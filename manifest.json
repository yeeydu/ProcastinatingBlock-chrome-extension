{
    "manifest_version": 3,
    "name": "Procrastination Blocker",
    "version": "1.0.0",
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "Content.js"
            ]
        }
    ],
    "icons": {
        "48": "icon48.png",
        "128": "icon128.png",
        "300": "icon.png"
    },
    "action": {
        "default_popup": "popup.html",
        "default_title": "Procrastination Blocker"
    },
    "permissions": [
        "activeTab",
        "scripting",
        "storage"
    ],
    "host_permissions": [
        "https://www.youtube.com/*",
        "https://www.facebook.com/*",
        "https://www.netflix.com/*",
        "https://www.robolox.com/*",
        "https://discord.com/*",
        "https://www.spotify.com/*",
        "https://www.tiktok.com/*"
    ]
}